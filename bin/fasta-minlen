#!/bin/bash
if [ $# -lt 1 ] || ! [[ $1 =~ '^[0-9]+$' ]]; then 
	echo "Usage: $(basename $0) <min_seq_len> [FASTA_FILE]..." >&2
	echo "Filter out FASTA sequences < min_seq_len."
	exit 1
fi
minlen=$1; shift
bioawk -v min=$minlen -c fastx '{ if (length($seq) >= min) { print ">"$name; print $seq; } }' "$@"

